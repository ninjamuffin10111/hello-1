#!/usr/bin/env python3

"""Not yo grandma's hello world."""

import skilstak.colors as c
import time

def plain(message):
    """Clears the screen and prints 'Hello world'."""
    print(c.clear + c.rc() + message + c.reset)

def multi(message):
    """Prints 'Hello world' in multiple colors like a Christmas tree (or Vegas sign)."""
    while True:
        print(c.clear + c.multi(message))
        time.sleep(0.5)

def color(message):
    """Fills the screen with randomly colored 'Hello world's."""
    print(c.clear)
    while True:
        print(c.rc() + message + c.reset, end=" ")

if __name__ == '__main__':
    import sys

    who = "world"
    option = ""
    message = ""

    if len(sys.argv) > 2:
        option = sys.argv[1]
        who = sys.argv[2]
    elif len(sys.argv) == 2:
        if sys.argv[1].startswith("-"):
            option = sys.argv[1]
        else:
            who = sys.argv[1]

    message = "Hello " + who + "!"

    # could do this more directly with reflection or an arg
    # parser, but keeping is simple for now
      
    try:
        if option == "-m":
            multi(message)
        elif option == "-c":
            color(message)
        else:
            plain(message)
    except KeyboardInterrupt:
        exit()
